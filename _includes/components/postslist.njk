<div class="grid grid-column__half grid-gap__normal">
	{% for post in collections.posts | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="article-card">
			<div class="article-card__cover">
				<a href="{{ post.url | url }}">
					<img src="{{ post.data.coverImage }}?nf_resize=fit&w=800" />
				</a>
			</div>
			<div class="article-card__copy">
				<h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>				
				<p>{{ post.data.description }}</p>
				{% if post.data.tags %}
					<span>
						{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
						{%- endif -%}
						{% endfor %}
					</span	>
				{% endif %}
			</div>
		</article>
	{% endfor %}
</div>
