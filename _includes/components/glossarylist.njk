<section>
	{% for post in glossarylist %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<h2>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h2>
			
			{% if post.data.description %}
				<p>
					{{ post.data.description }}
				</p>
			{% endif %}
			
		</article>
	{% endfor %}
</section>
