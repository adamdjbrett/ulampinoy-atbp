<section >
	<ul class="glossary-list">
	{% for post in glossarylist %}
		<li{% if post.url == url %} data-current="current item"{% endif %}>
				<a href="{{ post.url | url }}">
					<img class="cover-image" src="{{ post.data.coverImage }}?nf_resize=fit&w=400" />
				</a>
			<h2>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h2>
			
			{% if post.data.description %}
				<p>
					{{ post.data.description }}
				</p>
			{% endif %}
			
		</li>
	{% endfor %}
	</ul>
</section>
