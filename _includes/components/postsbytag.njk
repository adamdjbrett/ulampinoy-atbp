<div class="layout-wrapper">

<h1>Tagged <em class="highlight__stabilo">“{{ tag }}”</em></h1>
<div class="Cols Cols--half grid-gap__normal">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="article-card">
        <div class="article-card__cover">
				<a href="{{ post.url | url }}">
					<!--old way <img src="{{ sideImage }}?nf_resize=fit&w=800" />-->
					<img src="{{ post.data.coverImage }}" width="800px" />
				</a>
			</div>
            <div class="article-card__copy">
				<h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
				<p>{{ post.data.description }}</p>
				{% if post.data.tags %}
					<p>
						{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
						{%- endif -%}
						{% endfor %}
					</p>
				{% endif %}
			</div>
		</article>
	{% endfor %}
	</div>
</div>
