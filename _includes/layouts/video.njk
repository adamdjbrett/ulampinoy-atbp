---
layout: layouts/base.njk
section: video
---

<article class="article-post grid">
  <div class="billboard">
    <img src="{{ coverImage }}"/>
  </div>
  <header>
    <h1>{{ title }}</h1>
  </header>
  <section>
    {{ layoutContent | safe }}
  </section>

  <aside>
    <h4>Alam mo ba?</h4>
    <p>
      {{ sideNote }}
    </p>
    {% if sideImage %}
      <img src="{{ sideImage }}" />
    {% endif %}
  </aside>

  <div class="article-meta">
    {% if tags %}
      <p class="tags">
        {% for tag in tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </p>
    {% endif %}

    <p>
      <small>
        <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
      </small>
    </p>
    <a href="/categories/{{category}}">{{category}}</a>
  </div>
</article>

<div class="footer-nav">
  <a href="{{ '/video/' | url }}">‚Üê Balik sa lahat ng videos</a>
</div>
