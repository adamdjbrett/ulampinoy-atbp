---
layout: layouts/base.njk
section: video
---

<article class="article-post grid">
  <div class="billboard video-box">
    <iframe id="ytplayer" type="text/html" width="800" height="450" src="https://www.youtube.com/embed/{{ youtube }}"
      frameborder="0" allowfullscreen>
  </div>
  <div class="article-post-wrapper grid">
    <header>
      <h1>{{ title }}</h1>
    </header>
    <section>
      {{ layoutContent | safe }}

      <div class="postAdvert">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <ins class="adsbygoogle" style="display:block; text-align:center;" data-ad-layout="in-article"
          data-ad-format="fluid" data-ad-client="ca-pub-9964697758880128" data-ad-slot="6317196767"></ins>
        <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>
    </section>

    <aside>
      {% if sideNote %}
      <div class="aside-wrapper">
        <div class="liner"></div>
        <h4>Alam mo ba?</h4>
        <p>
          {{ sideNote }}
        </p>
        {% if sideImage %}
        <img src="{{ sideImage }}" />
        {% endif %}
      </div>
      {% endif %}
      <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- <Link Ads -->
      <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-9964697758880128" data-ad-slot="9198317454"
        data-ad-format="link" data-full-width-responsive="true"></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </aside>

    <div class="article-meta">
      {% if tags %}
      <p class="tags">
        {% for tag in tags %}
        {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
        {%- endif -%}
        {% endfor %}
      </p>
      {% endif %}

      <p>
        <small>
          <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
        </small>
      </p>
      <p class="goto">
        <a href="{{ '/video/' | url }}">‚Üê Balik sa lahat ng videos</a>
      </p>
    </div>
  </div>
</article>