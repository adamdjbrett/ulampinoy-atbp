					<a href="{{ post.url | url }}">
						<img src="{{ post.data.coverImage }}?nf_resize=fit&h=640" alt="{{ post.data.title }}" />
					</a>
				</div>
				<div class="article-card__copy">
					<h3>
						<a href="{{ post.url | url }}">{{ post.data.title }}</a>
					</h3>
					<p>{{ post.data.description }}</p>
				</div>
				</article>
				{% endfor %}
		</div>
		<p><a href="/video/">See more Videos &rArr;</a>
		</p>
	</div>
