---
layout: layouts/base.njk
section: archives
---

<article class="article-post grid">
  <div class="billboard">
    <img src="{{ coverImage }}?nf_resize=fit&w=1200"/>
  </div>
  <header>
    <h1>{{ title }}</h1>
  </header>
  <section>
    {{ layoutContent | safe }}
  </section>

  <aside>
    {% if sideNote %}
      <div class="aside-wrapper">
        <div class="liner"></div>
        <h4>Alam mo ba?</h4>
        <p>
          {{ sideNote }}
        </p>
        {% if sideImage %}
          <img src="{{ sideImage }}?nf_resize=fit&w=600"/>
        {% endif %}
      </div>
    {% endif %}
  </aside>

  <div class="article-meta">
    {% if tags %}
    <div class="liner"></div>
      <p class="tags">
        {% for tag in tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </p>
    {% endif %}

    <p>
      <small>
        <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
      </small>
    </p>
    <p class="goto">
      <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
    </p>
  </div>
</article>